<Page x:Class="ScheduleManagement.GUI.Pages.GuestViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ScheduleManagement.GUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="GuestViewPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <GroupBox BorderBrush="#FF3C4A58" Header="Просмотр кабинетов" FontSize="18" MaxWidth="880">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Label FontSize="18">Выберите школу:</Label>
                <Label FontSize="18">Выберите дату:</Label>
                <Label FontSize="18">Выберите учителя:</Label>
                <ComboBox Name="Tutors" Grid.Column="1" Height="30" MaxWidth="480" Margin="10"/>
                <ComboBox Name="School" Grid.Column="1" Height="30" MaxWidth="480" Margin="10"/>
                <DatePicker Name="Date" Grid.Column="1" Height="30" MaxWidth="480" Margin="10"/>


                <DataGrid Name="DGShowSchedule" Margin="20, 10"  AutoGenerateColumns="False" IsReadOnly="True" Grid.ColumnSpan="2" Grid.Row="1" FontSize="18" MaxWidth="360">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Урок" Binding="{Binding Path=LessonOrder}" Width="1*"/>
                        <DataGridTextColumn Header="Кaбинет" Binding="{Binding Path=CabinetId}" Width="1*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button FontSize="18" Name="Clear" Click="Clear_Click" Margin="10" MaxWidth="560" Height="50" Background="#FF18AFE5" BorderBrush="#FF18AFE5" Foreground="#FFE6E6F5" Grid.Row="2" Grid.ColumnSpan="2">Сбросить</Button>
            </Grid>
        </GroupBox>
        <Button Grid.Row="2" Margin="10,5" Name="Return" Background="#FF3C4A58" BorderBrush="#FF3C4A58" Foreground="White" Height="50" MaxWidth="560" FontSize="18" Click="Return_Click">Вернуться к аккаунту</Button>



    </Grid>
</Page>
