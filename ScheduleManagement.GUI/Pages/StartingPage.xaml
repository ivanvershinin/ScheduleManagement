<Page x:Class="ScheduleManagement.GUI.Pages.StartingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ScheduleManagement.GUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="250"
      Title="StartingPage">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Margin="15" Content="Войти в систему" Name="Login" Click="Login_Click"/>
        <Button Grid.Row="1" Margin="15" Content="Просмотреть расписания" Name="View" Click="View_Click"/>
        <Button Grid.Row="2" Margin="15" Content="Зарегестрироваться" Name="Registration" Click="Registration_Click"/>

    </Grid>
</Page>
