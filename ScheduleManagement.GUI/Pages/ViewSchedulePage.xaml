<Page x:Class="ScheduleManagement.GUI.Pages.ViewSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ScheduleManagement.GUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ViewSchedule">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <GroupBox BorderBrush="#FF3C4A58" Header="Просмотр расписания">
                <Grid>
                    <DataGrid Name="DGShowSchedule" Margin="20, 10"  AutoGenerateColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Урок" Binding="{Binding Path=LessonOrder}"/>
                            <DataGridTextColumn Header="Кaбинет" Binding="{Binding Path=CabinetId}"/>
                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>
            </GroupBox>
            <Button Grid.Row="2" Margin="10,5" Name="ReturnToAccount" Background="#FF3C4A58" BorderBrush="#FF3C4A58" Foreground="White" Click="ReturnToAccount_Click">Вернуться к аккаунту</Button>
        </Grid>

    </Grid>
</Page>
